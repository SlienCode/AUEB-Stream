<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.auebstream">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AUEBStream">
        <activity
            android:name=".ManageVideo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Manage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VideoPlayActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Play"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Subscribe"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Stream"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Upload"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Record"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Menu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Registered"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ServerSet"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NameSet"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>