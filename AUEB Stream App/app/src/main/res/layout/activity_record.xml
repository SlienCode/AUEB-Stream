<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Record">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_gravity="left"
        android:background="@drawable/back" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Title:"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/titleInput"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ems="10"
            android:hint="Making Tik Tok in 15 Days"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!?(){}[]/\-+=|`',.;:~_ "/>

        <TextView
            android:id="@+id/errorMessage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="You can't use a blank title."
            android:textColor="@color/red"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Hashtags:"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/hashtagInput"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ems="10"
            android:hint="#distributed_systems"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:digits="abcdefghijklmnopqrstuvwxyz0123456789#_ "/>

        <TextView
            android:id="@+id/errorMessage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Each hashtag should start with a # and contain at least one character."
            android:textColor="@color/red"
            android:textSize="15dp" />


        <ImageButton
            android:id="@+id/recordButton"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/record_button" />

        <TextView
            android:id="@+id/errorMessage3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="You need to fill the gaps above before starting recording."
            android:textColor="@color/red"
            android:textSize="15dp" />

    </LinearLayout>

</RelativeLayout>