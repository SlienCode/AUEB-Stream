<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subscribe">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_gravity="left"
        android:background="@drawable/back" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic:"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/topicInput"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:singleLine="true" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/channelNameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel Name"
                android:clickable="false" />

            <RadioButton
                android:id="@+id/hashtagButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hashtag" />


        </RadioGroup>

        <TextView
            android:id="@+id/errorMessage1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="You are subscribed to this topic already."
            android:textColor="@color/red"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/subscribeButton"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/subscribe_button" />

        <TextView
            android:id="@+id/errorMessage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="You need to fill the gap above before subscribing to a topic."
            android:textColor="@color/red"
            android:textSize="15dp" />

    </LinearLayout>

</RelativeLayout>